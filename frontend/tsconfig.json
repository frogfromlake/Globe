{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true, // Allows JS while migrating
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
  },
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "types": ["node"],
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "data", "./dist/data"],
  "ts-node": {
  "esm": true
  }
}
